generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tokens Token[]

  @@map("tb_users")
}

model Token {
  id        Int      @id @default(autoincrement())
  idUser    Int
  token     String
  createdAt DateTime @default(now())

  User User? @relation(fields: [idUser], references: [id])

  @@map("tb_tokens")
}
